<% layout("/layouts/boilerplate")%>

  <body>
    <div class="row">
      <div class="col-8 offset-2">
        <h3>create a new listing:</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" >


          <div>
            <label for="title" class="form-label">
              Title:
            </label>
            <input placeholder="enter title" name="listing[title]" type="text" class="form-control" required>
            
            <div class="valid-feedback">looks good</div>
          </div>
          <div>
            <label for="description" class="form-label">
              Description:
            </label>
            <textarea name="listing[description]" placeholder="enter description " class="form-control"
              required></textarea>
              <div class="invalid-feedback">enter a valid description:</div>
          </div>

          <br>
          <div>
            <label for="image" class="form-label">
              Upload image 
            </label>
            <input  type="file" name="listing[image]" class="form-control">
        
          </div>

          <br>
          <div class="row ">
            <div class="col-md-4">
              <label for="price" class="form-label">
                Price:
              </label>
              <input required placeholder="enter price " name="listing[price]" type="number" class="form-control">
              <div class="invalid-feedback">enter a valid Price </div>
            </div>


            <br>
            <div class="col-md-8">
              <label for="country" class="form-label">Country:</label>

              <input required placeholder="enter country" name="listing[country]" type="text" class="form-control">
              <div class="invalid-feedback">enter a valid country</div>
            </div>
          </div>


          <br>
          <div>
            <label for="location" class="form-label">Location:</label>
            <input placeholder="enter location" name="listing[location]" type="text" class="form-control" required>
            <div class="invalid-feedback">enter a valid location </div>
          </div>


          <br>
          <br>
          <button class="btn btn-dark  add-btn">submit</button>
      </div>
    </div>
    </form>
  </body>