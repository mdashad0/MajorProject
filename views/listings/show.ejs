<% layout("/layouts/boilerplate")%>
<script>
    let maptoken="<%=process.env.MAP_TOKEN%>";
const listing =<%- JSON.stringify(listing) %>;
</script>
    <body>
        <div class="row">
            <div class="col-8 offset-2">

                <h3>listing details:</h3>
            </div>
            <div class="card listing-card col-6 offset-2">
                <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing image">
                <div class="card-body">

                    <p class="card-text"><b>
                            <%=listing.title%>
                        </b>
                        <br>
                    <p class="card-text">Owner:<i>
                            <%=listing.owner.username%>
                        </i><br>
                        description:<%=listing.description%> <br> <br>
                            price:&#8377;<%=listing.price.toLocaleString("en-IN")%>
                                <br><br>
                                location:<%=listing.location%>
                                    <br>

                                    country<%=listing.country%>

                    </p>


                </div>

            </div>
            <%if(currUser && currUser._id.equals(listing.owner._id)) {%>
                <div class="btns">

                    <a class="btn btn-dark col-1 offset-2" href="/listings/<%=listing._id%>/edit">edit listing</a>

                    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                        <button class="btn btn-dark  offset-4">delete</button>

                    </form>
                </div>
                <%}%>

                    <%if(currUser){%>
                        <div class="col-8 offset-2">
                            <hr>
                            <h4>Leave a Review:</h4>
                            <form method="POST" action="/listings/<%=listing._id%>/reviews" novalidate
                                class="needs-validation">
                                <div class="mb-3 mt-3">
                                    <label class="form-label" for="rating">Rating:</label>
                                    <fieldset class="starability-slot">


                                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                            value="1" checked aria-label="No rating." />
                                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                        <label for="first-rate1" title="Terrible">1 star</label>
                                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                        <label for="first-rate2" title="Not good">2 stars</label>
                                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                        <label for="first-rate3" title="Average">3 stars</label>
                                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                        <label for="first-rate4" title="Very good">4 stars</label>
                                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                        <label for="first-rate5" title="Amazing">5 stars</label>
                                    </fieldset>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="form-label" for="comment">Comment:</label>
                                    <input type="text" name="review[comment]" id="comment" cols="15" rows="10"
                                        class="form-control" required>
                                    <div class="invalid-feedback">please enter valid comment:</div>
                                </div>
                                <button class="btn btn-outline-dark">submit</button>
                            </form>
                            <%}%>
                                <hr>
                             
                                <ul>
                                    <%if(listing.reviews.length >0) {%>
                                    <div class="row">
                                        <p>all reviews:</p>
                                        <%for(review of listing.reviews) {%>

                                            <div class="card col-5 ms-3 mb-3">
                                                <div class="card-body">
                                                    <div class="card-title">@<%=review.author.username%>
                                                    </div>
                                                    <p class="starability-result" data-rating="<%=review.rating%>">
                                                    <p class="card-title">
                                                        <%=review.comment%>
                                                    </p>


                                                    <form class="mb-3" method="POST"
                                                        action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                                                        <button class="btn btn-sm btn-dark">Delete</button>
                                                    </form>
                                                </div>
                                            </div>

                                            <%}%>
                                       </ul>
                                  </div>
                                  <%}%>
                        
        </div>
        <div class="col-8 offset-2">
            <h3>Where you will be :</h3>
            <div id="map"></div>    
            </div>
    </div>
<script src="/js/map.js"></script>
    </body>